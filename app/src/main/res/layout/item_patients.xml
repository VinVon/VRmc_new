<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/item_disease_spell_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/large_space"
        android:paddingTop="@dimen/small_space"
        android:paddingBottom="@dimen/small_space"
        android:background="@color/colorBackGround"
        tools:text="D"/>
    <LinearLayout
        android:background="@color/white"
        android:id="@+id/item_patient_ll"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginLeft="20dp"
            android:id="@+id/item_patient_img"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/patient_default"/>
        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/item_patient_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="15771013663"
            android:gravity="center_vertical"
            android:textSize="16sp"
            />

    </LinearLayout>
    <TextView
        android:id="@+id/line"
        android:visibility="gone"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e5e5e5"/>
</LinearLayout>