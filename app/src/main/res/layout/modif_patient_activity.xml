<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/activity_base_title_bar"></include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- 病历号-->
            <LinearLayout
                style="@style/modifpatient_items"
                android:id="@+id/medical_number"
                >
                <TextView
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textSize="15sp"
                    android:text="病历号"/>
                <EditText
                    android:inputType="number"
                    android:id="@+id/et_medical_number"
                    android:layout_marginLeft="10dp"
                    android:hint="@string/medical_number"
                    android:textSize="13sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"/>
            </LinearLayout>
            <!-- 姓名-->
            <LinearLayout
                style="@style/modifpatient_items"
                android:id="@+id/modif_ll_name"
                >
                <TextView
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textSize="15sp"
                    android:text="姓  名"/>
                <EditText
                    android:id="@+id/et_patient_name"
                    android:layout_marginLeft="10dp"
                    android:hint="@string/patient_name"
                    android:textSize="13sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"/>
            </LinearLayout>
            <!-- 姓名-->
            <LinearLayout
                style="@style/modifpatient_items"
                android:id="@+id/modif_ll_markname"
                >
                <TextView
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textSize="15sp"
                    android:text="备注名"/>
                <EditText
                    android:id="@+id/et_patient_markname"
                    android:layout_marginLeft="10dp"
                    android:hint="@string/patient_name"
                    android:textSize="13sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"/>
            </LinearLayout>
            <!-- 出生日期-->
            <LinearLayout
                style="@style/modifpatient_items"
                android:id="@+id/modif_ll_born"
                >
                <TextView
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textSize="15sp"
                    android:text="出生日期"/>
                <TextView
                    android:id="@+id/et_bron_date"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"/>
            </LinearLayout>
            <!-- 病症-->
            <LinearLayout
                style="@style/modifpatient_items"
                android:id="@+id/modif_ll_disease"
                >
                <TextView
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textSize="15sp"
                    android:text="病  症"/>
                <TextView
                    android:id="@+id/tv_disease"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"/>
            </LinearLayout>
            <!-- 性别-->
            <LinearLayout
                style="@style/modifpatient_items"
                android:id="@+id/modif_ll_sex"
                >
                <TextView
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textSize="15sp"
                    android:text="性  别"/>
                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"/>
            </LinearLayout>
            <!-- 手机-->
            <LinearLayout
                style="@style/modifpatient_items"
                android:id="@+id/modif_ll_phonebymber"
                >
                <TextView
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textSize="15sp"
                    android:text="手  机"/>
                <EditText
                    android:maxLength="11"
                    android:inputType="number"
                    android:id="@+id/et_phonenumber"
                    android:layout_marginLeft="10dp"
                    android:hint="@string/phone_number"
                    android:textSize="13sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"/>
            </LinearLayout>
            <!-- 婚姻状况-->
            <LinearLayout
                style="@style/modifpatient_items"
                android:id="@+id/modif_ll_marry"
                >
                <TextView
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textSize="15sp"
                    android:text="婚姻状况"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/tv_marry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"/>
            </LinearLayout>
            <!-- 文化程度-->
            <LinearLayout
                style="@style/modifpatient_items"
                android:id="@+id/modif_ll_tv_erducation"
                >
                <TextView
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textSize="15sp"
                    android:text="文化程度"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/tv_erducation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"/>
            </LinearLayout>
            <!-- 医保卡号-->
            <LinearLayout
                style="@style/modifpatient_items"
                android:id="@+id/modif_ll_medical_card_number"
                >
                <TextView
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:textSize="17dp"
                    android:text="医保卡号"/>
                <EditText
                    android:id="@+id/et_medical_card_number"
                    android:layout_marginLeft="10dp"
                    android:hint="@string/medical_card"
                    android:textSize="13sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>