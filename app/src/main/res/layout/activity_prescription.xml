<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#f5f5f5"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/activity_base_title_bar"/>
    <ScrollView
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="#f5f5f5"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="病症"
                android:textSize="15sp"
                android:padding="@dimen/small_space"
                android:background="#f5f5f5"/>
            <EditText
                android:id="@+id/prescription_et1"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:hint="病症详情"
                android:textSize="15dp"
                android:padding="@dimen/small_space"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="建议方案"
                android:padding="@dimen/small_space"
                android:textSize="15sp"
                android:background="#f5f5f5"/>
            <EditText
                android:id="@+id/prescription_et2"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:hint="建议方案"
                android:textSize="15dp"
                android:padding="@dimen/small_space"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="已选内容"
                android:padding="@dimen/small_space"
                android:textSize="15sp"
                android:background="#f5f5f5"/>
            <com.medvision.vrmc.view.ListViewForScrollView
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/prescription_recycle"></com.medvision.vrmc.view.ListViewForScrollView>
            <LinearLayout
                android:id="@+id/prescription_add"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:orientation="vertical">
                <TextView
                    android:gravity="center"
                    android:text="+ 添加内容"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
