<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/activity_base_title_bar"/>
    <ViewStub
        android:id="@+id/nodata_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout="@layout/nodata_error" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
            android:weightSum="100"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/therapy_tv_point"
            android:gravity="center"
            android:layout_weight="33"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击量"
            android:textColor="@color/gray"/>
        <TextView
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/black"/>
        <TextView
            android:layout_marginRight="25dp"
            android:id="@+id/therapy_tv_price"
            android:gravity="center_horizontal"
            android:layout_weight="33"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="价格"
            android:drawablePadding="-25dp"
            android:drawableRight="@mipmap/triangle_default"
            android:textColor="@color/gray"/>
        <TextView
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/black"/>
        <TextView
            android:drawablePadding="-25dp"
            android:layout_marginRight="25dp"
            android:id="@+id/therapy_tv_time"
            android:gravity="center"
            android:layout_weight="32"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:drawableRight="@mipmap/triangle_default"
            android:layout_height="wrap_content"
            android:text="时长"
            android:textColor="@color/gray"/>
    </LinearLayout>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swiperefreshlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/therapy_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>